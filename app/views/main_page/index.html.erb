    $('#dialog').html( data );


    $('#dialog').css({display:'inline'});

    $("#dialog").dialog({
        title: '資料',
        bgiframe: true,
        width: 350,
        height: 350,
        modal: true,
        draggable: true,
        resizable: false,
        overlay:{opacity: 0.7, background: "#FF8899" },

        buttons: {
            '關閉': function() {
                $(this).dialog('close');
            }
        }
    });


}
</script>





  
