
<% if news != nil %>
  <% news.each do |news| %>
    <div id="news">
      <div id="news_title">
        <h3>
          <a title="<%= news.title %>" href="<%= news_index_path+'/'+news.id.to_s %>"><%= news.title %></a>
        </h3>
      </div>
      <%= news.created_at %>
      <div id="news_content">
        <%= news.content.html_safe %>
      </div>
      <div id="comments">

      <h3>讀者迴響</h3>
      <div id="fb-root"></div>
      <script src="http://connect.facebook.net/zh_TW/all.js#appId=102018533222077&amp;xfbml=1"></script>

      <fb:comments href="<%= "http://heygotimes.heroku.com/news/"+news.id.to_s %>" num_posts="20" width="580"></fb:comments>

      </div>
    </div>
  <% end %>
<% end %>


