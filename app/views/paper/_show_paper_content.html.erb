

<% if news != nil %>
  <% news.each do |news| %>
    <div class="news">
      <div class="news_title">
        <% if (news.special_flag==false) %>
          <% url=news_index_path+'/'+news.fb_obj_url %>
        <% else %>
          <% url=news_index_path+'/'+news.id.to_s %>
        <% end %>
        <a title="<%= news.title %>" href="<%= url %>" onclick="window.open('<%= url %>'); return false;"><%= news.title %></a>
      </div>

      <div class="info">
        <!-- todo: 時區需要判斷  -->
        <%= t(:info_1) %> <%= news.user.first_name %> <%= t(:info_2) %> <%= news.created_at.in_time_zone("Taipei").strftime("%Y/%m/%d %H:%M") %> <%= t(:info_3) %>, <%= t(:info_tags) %>:
        <% news.tags.each_with_index do |tag, index| %>
          <%= "/" if (index != 0) %>
          <a href="javascript:void(null)" onclick="set_tag('<%= tag.name %>')" ><%= t(tag.name.to_sym) %></a>

        <% end %>
      </div>

      <div class="image">
         <% if news.images != [] && news.images[0].url != "" %>
            <img src="<%=news.images[0].url.to_s%>" alt="image" width="150" onerror="javascript:this.src='http://heygotimes.heroku.com/images/newspaper_bw.jpg'">
         <% end %>
      </div>

      <div class="news_content">
        <%= news.content.html_safe %>
      </div>

      <div style="clear: both;"></div>
    </div> <!-- news -->

    <div class="comments">
      <% graph = Koala::Facebook::GraphAPI.new() %>
      <% fb_obj_url = get_fb_obj_url(news) %>
      <% fb_obj = graph.get_object(fb_obj_url) %>
      <% comments = (fb_obj['comments'] == nil)? 0: fb_obj['comments'] %>
      <% shared = (fb_obj['shares'] == nil)? 0: fb_obj['shares'] %>

      <% if news_sub_type != "feedback" %>
        <div class="button_group">
          <a style="float: right;" href="javascript:void(null)" onclick="report_the_spam( <%= news.id %>,'<%= news.title %>')">
            <img class="button-icon-like" src="/images/stop_button.png" width="30px" height="30px"
                 alt="" title="<%= t(:report_spam)%>" />
          </a>
          <span class='share_count count_span' id='share_count<%= news.id %>'><%= shared %></span><a style="float: right;" href="javascript:void(null)" onclick="share('<%= news.id %>', '<%= fb_obj_url %>', '<%= news.title %>');" title="<%= t(:share_hint) %>"><img class="button-icon-share" src="/images/facebook_icon.png" alt="" /></a>
          <span class='unlike_count count_span' id='unlike_count<%= news.id %>'><%= news.unlikes.count %></span><a style="float: right;" href="javascript:void(null)" onclick="like(<%= session[:id] %>, <%= news.id %>, 0);"><img class="button-icon-unlike" src="/images/unlike_button.png" alt="" /></a>
          <span class='like_count count_span' id='like_count<%= news.id %>'><%= news.likes.count %></span><a style="float: right;" href="javascript:void(null)" onclick="like(<%= session[:id] %>, <%= news.id %>, 1);"><img class="button-icon-like" src="/images/like_button.png" alt="" /></a>
        </div>
      <% end %>

      <div class="comment_title" id="comment_title_<%= news.id %>" onclick="expand_comment(<%= news.id %>, '<%= fb_obj_url %>');"><a href="javascript:void(null)"><%= t(:comments)%></a><span id='expand_comment<%= news.id %>'><a href="javascript:void(null)"><%= '(' + comments.to_s + ')' %><img class="button-icon-expand" src="/images/expand.png" alt=""/></a></span></div>

      <div class="fb_comment" id="fb_comment<%= news.id %>">
        <div id="fb-root"></div>

      </div> <!-- fb_comment -->
      <div style="clear: both;"></div>
    </div> <!-- comments -->

    <%# if (index != 0) %>
      <hr>
    <%# end %>
  <% end %>
<% end %>


