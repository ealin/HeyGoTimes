     function check_tags(the_checkbox)
     {
        if(the_checkbox.id != 'All')
        {
            // set checkbox- "All" as not selected!

            for(i=0;i<($('input').length);i++)
             {
                 if( $('input')[i].name != "each_tag")
                 {
                     continue ;
                 }

                 if($('input')[i].id == "All" && $('input')[i].checked == true)
                 {
                     $('input')[i].checked = false ;
                     break ;
                 }

              }
       }
       else
       {

           for(i=0;i<($('input').length);i++)
           {
                 if( $('input')[i].name != "each_tag")
                     continue ;

                 if($('input')[i].id == "All")
                     continue ;

                 $('input')[i].checked = false ;

           }

       }
     }



